div(ng-switch="state")
  .group-list.clearfix(ng-switch-when="choose-group")
    .group-item.box(ng-repeat="group in groups")
      .box-head
        h3.group-name {{group.name}}
        .box-control
          button.btn.btn-secondary.btn-sm(ng-click="joinGroup(group)") 进入
      .box-body
        .group-desc {{group.desc}}
        button.btn.btn-error.btn-sm(ng-click="deleteGroup($index)") 删除
  post(ng-switch-when="in-group")